<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox fx:id="mainVBox" 
    alignment="CENTER" spacing="20.0" 
    xmlns="http://javafx.com/javafx" 
    xmlns:fx="http://javafx.com/fxml" 
    fx:controller="com.example.homePageController" >

   <children>
      <Label text="Home Page" />
      <Button fx:id="createUser" text="Create User" onAction="#switchToCreateUser"/>
      <Button fx:id="displayReceipts" text="Show Receipts" onAction="#switchToDisplayReceipt"/>
      <Button fx:id="displayUsers" text="Show Users" onAction="#switchToDisplayUsers"/>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
